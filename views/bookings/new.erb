<h1>New booking!!</h1>

<form action="/bookings/new" method="post">
  <label>
  Select a class:
    <select name="gymclass_id">
      <% for gymclass in @gymclasses %>
      <option value="<%= gymclass.id %>"><%= gymclass.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    Select a member:
    <select name="member_id">
      <% for member in @members %>
      <option value="<%= member.id %>"><%= member.name %></option>
      <% end %>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="Booking!">
</form>
